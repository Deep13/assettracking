<mvc:View controllerName="qrscan.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m">
    <m:Page id="page" title="Asset Tracking Admin">
        <m:customHeader>
            <m:OverflowToolbar>
                <m:Title text="Welcome,{UserModel>/username}" />
                <m:ToolbarSpacer />
                <m:Title text="Asset Tracking Admin" />
                <m:ToolbarSpacer />
                <m:Button icon="sap-icon://user-edit" text="Create Users" press='onUsersCreate' />
                <m:Button icon="sap-icon://log" text="Logout" press="onLogout" />
            </m:OverflowToolbar>
        </m:customHeader>
        <m:content>
            <f:SimpleForm
                id="formQRCode"
                layout="ResponsiveGridLayout"
                title="Bulk QR Code Generator"
                editable="true"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanL="4"
                emptySpanM="4"
                columnsL="1"
                columnsM="1">

                <f:content>
                    <!-- Step 1: Upload your data -->
                    <m:Label text="Upload your data" />
                    <m:VBox>
                        <u:FileUploader
                            id="fileUploader"
                            width="auto"
                            tooltip="Choose File"
                            placeholder="No file chosen"
                            change="onFileUpload" />
                        <m:TextArea
                            id="textAreaQRCodeData"
                            width="100%"
                            placeholder="Or, enter your data here, 1 line per QR code in an object of array"
                            rows="6" />
                        <m:Button
                            text="Clear All Data"
                            press="onClearData" />
                    </m:VBox>


                    <!-- Step 2: Generate -->
                    <m:Button
                        id="btnGenerateQRCode"
                        text="Generate QR Codes"
                        press="onGenerateQRCode" />
                </f:content>
            </f:SimpleForm>
            <!-- Step 3: Bind data in table -->
            <core:HTML
                content='&lt;div style=&quot;position: absolute;top: 0px;bottom: 0px;opacity: 0;&quot; id=&quot;qrimage&quot;&gt;&lt;/div&gt;'>
            </core:HTML>
            <m:Table id="idQRCodeTable" items="{/items}" mode="MultiSelect">
                <m:headerToolbar>
                    <m:Toolbar>
                        <m:Title text="QR Code Data" />
                        <m:ToolbarSpacer />
                        <m:Button text="Print" icon="sap-icon://print" press="onPrint" />
                        <!-- <m:Button text="Download Excel" press="onDownloadExcel" /> -->
                    </m:Toolbar>
                </m:headerToolbar>
                <m:columns>
                    <m:Column>
                        <m:Text text="Location ID" />
                    </m:Column>
                    <m:Column>
                        <m:Text text="Asset ID" />
                    </m:Column>
                    <m:Column hAlign="Center">
                        <m:Text text="QR Code" />
                    </m:Column>
                </m:columns>
                <m:items>
                    <m:ColumnListItem>
                        <m:cells>
                            <m:ObjectIdentifier title="{locationData}" />
                            <m:ObjectIdentifier title="{assetData}" />
                            <m:Image src="{qrCodeUrl}">
                                <m:detailBox>
                                    <m:LightBox>
                                        <m:LightBoxItem
                                            imageSrc="{qrCodeUrl}"
                                            alt="Beamer"
                                            subtitle="Location:{locationData}"
                                            title="Asset:{assetData}" />
                                    </m:LightBox>
                                </m:detailBox>
                            </m:Image>
                            <!-- <m:Button
                                text="ShowQR"
                                press="onViewQR" /> -->
                        </m:cells>
                    </m:ColumnListItem>
                </m:items>
            </m:Table>
        </m:content>
    </m:Page>
</mvc:View>